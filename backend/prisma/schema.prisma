generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// --- USUÁRIOS ---
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  phone     String   @unique
  name      String
  password  String   
  role      Role     @default(OWNER)
  
  storeName String?
  category  String?
  
  assistantName        String?
  assistantStyle       String? 
  assistantPersonality String? 

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // RELACIONAMENTOS (O Dono de tudo)
  sales     Order[]
  products  Product[] // <--- Cada user tem seus produtos
  clients   Client[]  // <--- Cada user tem seus clientes
}

enum Role {
  OWNER
  SELLER
}

// --- PRODUTOS ---
model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  sku         String?  // Removi o @unique global, pois users diferentes podem ter sku igual
  imageUrl    String?
  
  costPrice   Float    @default(0) 
  salePrice   Float    @default(0) 
  stock       Int      @default(0)
  minStock    Int      @default(3)
  
  category    String?
  brand       String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // VINCULO COM O DONO
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])

  orderItems  OrderItem[]
}

// --- CLIENTES ---
model Client {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  phone     String?
  email     String?
  cpf       String?
  address   String?
  notes     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // VINCULO COM O DONO
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])

  orders    Order[]
}

// --- PEDIDOS ---
model Order {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  code        Int         @default(0)
  status      OrderStatus @default(OPEN)
  total       Float       @default(0)
  discount    Float       @default(0)
  paymentType PaymentType @default(PIX)
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  clientId    String?     @db.ObjectId
  client      Client?     @relation(fields: [clientId], references: [id])
  
  // VENDEDOR AGORA É OBRIGATÓRIO (Para filtrar as vendas dele)
  sellerId    String      @db.ObjectId
  seller      User        @relation(fields: [sellerId], references: [id])

  items       OrderItem[]
  tradeIn     TradeIn?
}

enum OrderStatus {
  OPEN
  WAITING_PAYMENT
  PAID
  CANCELED
  IN_SERVICE
  READY
}

enum PaymentType {
  PIX
  CREDIT_CARD
  DEBIT_CARD
  CASH
  SPLIT
}

// --- ITENS ---
model OrderItem {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  quantity  Int
  price     Float   
  name      String  
  
  orderId   String  @db.ObjectId
  order     Order   @relation(fields: [orderId], references: [id])
  
  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id])
}

model TradeIn {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  model         String
  imei          String?
  condition     String
  purchasePrice Float
  
  orderId       String   @unique @db.ObjectId
  order         Order    @relation(fields: [orderId], references: [id])

  createdAt     DateTime @default(now())
}

model VerificationCode {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  phone     String   @unique
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}