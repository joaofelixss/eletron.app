// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// --- USUÁRIOS E AUTENTICAÇÃO ---
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  phone     String   @unique
  name      String
  password  String   // Em produção, lembre de usar Hash (bcrypt)
  role      Role     @default(OWNER)
  
  // --- NOVOS CAMPOS ---
  storeName String?
  category  String?
  
  // Configuração do Assistente (Nome, Estilo, Personalidade)
  assistantName        String?
  assistantStyle       String? // bottts ou avataaars
  assistantPersonality String? // friendly ou serious

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sales     Order[]
}

enum Role {
  OWNER
  SELLER
}

// --- PRODUTOS E ESTOQUE ---
model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  sku         String?  @unique
  imageUrl    String?
  
  costPrice   Float    @default(0) 
  salePrice   Float    @default(0) 
  stock       Int      @default(0)
  minStock    Int      @default(3)
  
  category    String?
  brand       String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orderItems  OrderItem[]
}

// --- CLIENTES (CRM) ---
model Client {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  phone     String?
  email     String?
  cpf       String?
  address   String?
  notes     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  orders    Order[]
}

// --- VENDAS E PEDIDOS (PDV) ---
model Order {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  code        Int         @default(0) // Ajuste temporário
  status      OrderStatus @default(OPEN)
  total       Float       @default(0)
  discount    Float       @default(0)
  paymentType PaymentType @default(PIX)
  
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  clientId    String?     @db.ObjectId
  client      Client?     @relation(fields: [clientId], references: [id])
  
  // Vendedor Opcional por enquanto (até termos Login)
  sellerId    String?     @db.ObjectId
  seller      User?       @relation(fields: [sellerId], references: [id])

  items       OrderItem[]
  tradeIn     TradeIn?
}

enum OrderStatus {
  OPEN
  WAITING_PAYMENT
  PAID
  CANCELED
  IN_SERVICE
  READY
}

enum PaymentType {
  PIX
  CREDIT_CARD
  DEBIT_CARD
  CASH
  SPLIT
}

// --- ITENS DO PEDIDO ---
model OrderItem {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  quantity  Int
  price     Float   // Preço unitário no momento da venda
  name      String  // Nome do produto (para histórico)
  
  orderId   String  @db.ObjectId
  order     Order   @relation(fields: [orderId], references: [id])
  
  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id])
}

// --- TRADE-IN ---
model TradeIn {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  model         String
  imei          String?
  condition     String
  purchasePrice Float
  
  orderId       String   @unique @db.ObjectId
  order         Order    @relation(fields: [orderId], references: [id])

  createdAt     DateTime @default(now())
}

// --- MARKETING IA ---
model MarketingContent {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  productName   String
  generatedText String
  platform      String
  createdAt     DateTime @default(now())
}

// Adicione no final do arquivo
model VerificationCode {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  phone     String   @unique
  code      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}